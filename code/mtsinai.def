Bootstrap: docker
From: ubuntu:18.04

%files
  simSing.R  simSing.R

%environment
  export LC_ALL=C
  DEBIAN_FRONTEND=noninteractive

%post
  apt update
  # Install R 4.0.2:
  apt -y install gnupg software-properties-common tzdata
  apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
  add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu bionic-cran40/'
  apt -y install r-base r-base-dev
  R --slave -e 'install.packages(c("Matrix", "FastGP", "mvtnorm", "fields", "dplyr"), repos="https://cloud.r-project.org/")'

%runscript
  echo "Nothing happens in this container"
